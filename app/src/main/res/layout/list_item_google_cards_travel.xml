<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.ensaf.etudiant.mtapplication"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:background="@drawable/card_background_white"
    android:minHeight="340dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_weight="1"
        android:minHeight="190dp" >

        <ImageView
            android:id="@+id/list_item_google_cards_travel_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/cd_main_image"
            android:scaleType="centerCrop" />

        <com.ensaf.etudiant.mtapplication.font.RobotoTextView
            android:id="@+id/list_item_google_cards_travel_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="24dp"
            android:background="@android:color/transparent"
            android:text="Best tours"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:typeface="robotoRegular" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/google_cards_background_bottom"
        android:gravity="right"
        android:orientation="vertical" >

        <com.ensaf.etudiant.mtapplication.font.RobotoTextView
            android:id="@+id/list_item_google_cards_travel_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="Bienvenue à Fés"
            android:textColor="@color/material_blue_grey_300"
            android:textSize="24sp"
            app:typeface="robotoRegular"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:gravity="left" />

        <com.ensaf.etudiant.mtapplication.font.RobotoTextView
            android:id="@+id/list_item_google_cards_travel_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="left"
            android:maxLines="4"
            android:text="@string/lorem_ipsum_long"
            android:textColor="@color/material_blue_grey_700"
            android:textSize="14sp"
            app:typeface="robotoRegular"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:textAlignment="gravity" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <com.ensaf.etudiant.mtapplication.font.RobotoTextView
                android:id="@+id/list_item_google_cards_travel_explore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/transparent_button_selector"
                android:padding="8dp"
                android:text="Voir la cart"
                android:textColor="@color/material_pink_500"
                android:textSize="14sp"
                app:typeface="robotoMedium"
                android:layout_weight="1"
                android:gravity="center" />

            <com.ensaf.etudiant.mtapplication.font.RobotoTextView
                android:id="@+id/list_item_google_cards_travel_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/transparent_button_selector"
                android:padding="8dp"
                android:text="Plus d'infos"
                android:textColor="@color/material_pink_500"
                android:textSize="14sp"
                app:typeface="robotoMedium"
                android:layout_weight="1"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>